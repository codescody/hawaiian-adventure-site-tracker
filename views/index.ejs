<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Hawaiian Islands Adventure Site Tracker</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        <style>
            img{
                max-width: 400px;
                max-height: 400px;
            }
        </style>
        <% sites.forEach(site => { %>
            <%= site.name %>,
            <%= site.island %>
            <a href="/sites/<%=site._id%>"><img src=<%= site.image %>></a>

            <form action="/sites/<%= site.id %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE" />
            </form>


        <% }) %>
        <script src="" async defer></script>
    </body>
</html>